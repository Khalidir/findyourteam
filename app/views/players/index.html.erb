  <div class="cards-player" >
      <% @players.each do|player| %>
        <!-- <div class="card" > -->
          <div class="card-wrapper-player">
            <div>
             <!--  <% if player.photo.attached? %>
                <%= cl_image_tag player.photo.key, class: "avatar-square-player" %>
              <% else %> -->
