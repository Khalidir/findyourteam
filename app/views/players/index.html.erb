  <div>
  <h2>Index of Players</h2>

  <%= form_tag players_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a player",
        autocomplete: "off"
      %>
      <%= submit_tag "Search", class: "btn btn-outline-dark" %>
      </button>
    </div>
  <% end %>
  <div class="cards-main-player" style="background-image: url(https://media.threatpost.com/wp-content/uploads/sites/103/2019/03/14151149/Counterstrike.jpg)">
    <div class="cards-player" >
        <% @players.each do|player| %>
            <div class="card-wrapper-player">
              <div>
                  <%= image_tag player.rank.image, size: "120x120",class: "avatar-square-player" %>
              </div>
              <div class="card-position">
                <div>Position => <%= player.position_name.name %></div>
                <div>Nickname => <%= player.nickname %></div>
                <div><td>Capitain's Pick => <%= link_to "Invite player", controller: "pending_applications",
                                            action: "create_invitation",
                                            player: player.id,
                                            game_id: player.game,
                                            position: player.position_name %></td></div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
