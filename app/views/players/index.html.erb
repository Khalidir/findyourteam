<div>
  <h2>Index of Players</h2>
  <%= form_tag players_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a player",
        autocomplete: "off"
      %>
      <br>
      <%= submit_tag "Search", class: "btn btn-outline-dark" %>
      </button>
    </div>
  <% end %>
</div>
