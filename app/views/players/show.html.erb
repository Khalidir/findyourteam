    <%= cl_image_tag @player.photo.key, height: 100, width: 100, crop: :fill %>
    <% else %>
    <%= image_tag "avatar.png" , height: 100, width: 100, crop: :fill %>
  <% end %>
  </div>
</td>
<br>
