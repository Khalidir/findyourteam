<div class="player-wrapper-avatar">
  <div class="player-avatar-big">
  <% if @player.photo.attached? %>
    <%= cl_image_tag @player.photo.key, height: 195, width: 195, crop: :fill %>
    <% else %>
    <%= image_tag "avatar_logo.jpg" , height: 195, width: 195, crop: :fill %>
  <% end %>
  </div>
  <div class="player-stats">
    <h1>Nickname: <%= @player.nickname %></h1>
    <h3>Position: <%= @player.position_name.name %></h3>
    <h3>Rank: <%= @player.rank.name %></h3>
    <h3>Region: Germany</h3>
  </div>
  <div class="player-rank">
    <%= image_tag @player.rank.image, size: "125x125",class: "avatar-square-player" %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="player-div-orange">INVITE</div>
  <div class="player-div-orange">MESSAGE</div>
  <div class="player-div-orange">STATS</div>
</div>

<div class = "invitation-wrapper" >
  <h2>Pending Invitations</h2>
  <% @pending_applications.each do |pending_applications| %>
    <% if pending_applications.user_approval %>
      <div class="invitation-card">
        <% if pending_applications.position.team.photo.attached? %>
          <%= cl_image_tag player.photo.key, height: 90, width: 90 %>
        <% else %>
          <%= image_tag "void.png", height: 90, width: 90, crop: :fill %>
        <% end %>
        <%= link_to pending_applications.position.team.name, team_positions_path(pending_applications.position.team.id) %>
      </div>
    <% end %>
  <% end %>
  <h2>My Applications</h2>
  <% @pending_applications.each do |pending_applications| %>
    <% if pending_applications.owner_approval %>
      <div class="invitation-card d">
        <%= link_to pending_applications.position.team.name, team_positions_path(pending_applications.position.team.id) %>
      </div>
    <% end %>
  <% end %>
</div>
