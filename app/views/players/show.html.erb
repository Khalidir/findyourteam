    <div class="col-sm-4 col-sm-offset-3">
      <h3>My Profile</h3>
       <h3> <%= @player.nickname %></h3>
       <h3> <%= @player.email %></h3>
       <h3> <%= @player.rank %></h3>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <%= link_to "Back to Players", players_path, class: "btn btn-outline-primary" %>
